<div class="page-header">
  <%= link_to '<button class="nav nav-pills pull-right btn btn-primary">Ajouter un ticket</button>'.html_safe, new_ticket_path %>
  <h1>Listing tickets</h1>
</div>

<div class="well">
  <table class="table table-striped">
    <tr>
      <th>Title</th>
      <th class="hidden-phone">Description</th>
      <th>Ticket states</th>
      <th class="hidden-phone">Type</th>
      <th>Priority</th>
      <th class="hidden-phone">Percent</th>
      <th class="hidden-phone">Project</th>
      <th>User</th>
      <th colspan="3">Actions</th>
    </tr>

  <% @tickets.each do |ticket| %>
    <tr>
      <td><%= ticket.title %></td>
      <td class="hidden-phone"><%= ticket.description %></td>
      <td><%= ticket.ticket_state.name %></td>
      <td class="hidden-phone"><%= ticket.ticket_type.name %></td>
      <td><%= ticket.ticket_priority.name %></td>
      <td class="hidden-phone"><%= ticket.percent %> %</td>
      <td class="hidden-phone"><%= ticket.project.title %></td>
      <td><%= ticket.user.firstname.first.capitalize %>. <%= ticket.user.lastname.capitalize %></td>
      <td><%= link_to '<i class="icon-eye-open"></i>'.html_safe, ticket, :rel => 'tooltip', :title => 'Voir le ticket' %></td>
      <td><%= link_to '<i class="icon-pencil"></i>'.html_safe, edit_ticket_path(ticket), :rel => 'tooltip', :title => 'Editer le ticket' %></td>
      <td><%= link_to '<i class="icon-remove"></i>'.html_safe, ticket, method: :delete, data: { confirm: 'Are you sure?' }, :rel => 'tooltip', :title => 'Supprimer le ticket' %></td>
    </tr>
  <% end %>
  </table>
</div>

<br />

<%= will_paginate @tickets, :renderer => BootstrapPagination::Rails %>

<br />
