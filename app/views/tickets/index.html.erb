<div class="page-header">
    <h1>Listing tickets</h1>
</div>

<div style="float: right">

</div>
<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Ticket states</th>
    <th>Type</th>
    <th>Priority</th>
    <th>Percent</th>
    <th>Project</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tickets.each do |ticket| %>
  <tr>
    <td><%= ticket.title %></td>
    <td><%= ticket.description %></td>
    <td><%= ticket.ticket_state_id %></td>
    <td><%= ticket.ticket_type_id %></td>
    <td><%= ticket.ticket_priority_id %></td>
    <td><%= ticket.percent %></td>
    <td><%= ticket.project_id %></td>
    <td><%= ticket.user_id %></td>
    <td><%= link_to '<i class="icon-eye-open"></i>'.html_safe, ticket %></td>
    <td><%= link_to '<i class="icon-pencil"></i>'.html_safe, edit_ticket_path(ticket) %></td>
    <td><%= link_to '<i class="icon-remove"></i>'.html_safe, ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<br />
<div class="page_info">
  <%= page_entries_info @tickets %>
</div>


<%= will_paginate @tickets, :renderer => BootstrapPagination::Rails %>
<br />

<%= link_to 'New Ticket', new_ticket_path %>
