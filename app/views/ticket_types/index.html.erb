<div class="page-header">
  <% if can? :manage, :all %>
    <%= link_to "<button class=\"nav nav-pills pull-right btn btn-primary\">#{I18n.t(:'ticket_type.new.btn')}</button>".html_safe, new_ticket_type_path %>
  <% end %>
  <h1><%= I18n.t(:'ticket_type.index.title') %></h1>
</div>

<div class="well">
  <table class="table table-striped">
    <tr>
      <th><%= I18n.t(:'ticket_type.global.name') %></th>
      <th colspan="3" class="hidden-phone"><%= I18n.t(:'global.actions') %></th>
    </tr>

  <% @ticket_types.each do |ticket_type| %>
    <tr>
      <td><%= link_to ticket_type.name, ticket_type, :rel => 'tooltip', :title => I18n.t(:'ticket_type.show.btn') %></td>
      <td class="hidden-phone"><%= link_to '<i class="icon-eye-open"></i>'.html_safe, ticket_type, :rel => 'tooltip', :title => I18n.t(:'ticket_type.show.btn') %></td>
      <td class="hidden-phone"><% if can? :manage, :all %><%= link_to '<i class="icon-pencil"></i>'.html_safe, edit_ticket_type_path(ticket_type), :rel => 'tooltip', :title => I18n.t(:'ticket_type.edit.btn') %><% end %></td>
      <td class="hidden-phone"><% if can? :manage, :all %><%= link_to '<i class="icon-remove"></i>'.html_safe, ticket_type, method: :delete, data: { confirm: I18n.t(:'global.confirm') }, :rel => 'tooltip', :title => I18n.t(:'ticket_type.delete.btn') %><% end %></td>
    </tr>
  <% end %>
  </table>
</div>

<br />

<%= will_paginate @ticket_types, :renderer => BootstrapPagination::Rails %>
