<div class="page-header">
  <%= link_to '<button class="nav nav-pills pull-right btn btn-primary">Ajouter un type</button>'.html_safe, new_ticket_type_path %>
  <h1>Listing ticket types</h1>
</div>

<div class="well">
  <table class="table table-striped">
    <tr>
      <th>Name</th>
      <th colspan="3">Actions</th>
    </tr>

  <% @ticket_types.each do |ticket_type| %>
    <tr>
      <td><%= ticket_type.name %></td>
      <td><%= link_to '<i class="icon-eye-open"></i>'.html_safe, ticket_type, :rel => 'tooltip', :title => 'Voir le type' %></td>
      <td><%= link_to '<i class="icon-pencil"></i>'.html_safe, edit_ticket_type_path(ticket_type), :rel => 'tooltip', :title => 'Editer le type' %></td>
      <td><%= link_to '<i class="icon-remove"></i>'.html_safe, ticket_type, method: :delete, data: { confirm: 'Are you sure?' }, :rel => 'tooltip', :title => 'Supprimer le type' %></td>
    </tr>
  <% end %>
  </table>
</div>

<br />

<%= will_paginate @ticket_types, :renderer => BootstrapPagination::Rails %>

<br />

