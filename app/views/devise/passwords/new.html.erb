<h2>Forgot your password?</h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'simple_form well form-horizontal' }) do |f| %>
  <%= f.input :email, :autofocus => true %>
  <%= f.button :submit, :value => I18n.t(:'simple_form.submit') %>
<% end %>

<%= render "devise/shared/links" %>
