<h2>Inscription</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'simple_form well form-horizontal' }) do |f| %>
  <%= f.input :email, :autofocus => true %>
  <%= f.input :firstname %>
  <%= f.input :lastname %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.button :submit, :value => I18n.t(:'simple_form.submit') %>
<% end %>

<%= render "devise/shared/links" %>
