<div class="page-header">
  <h1>Edit <%= resource_name.to_s.humanize %></h1>
</div>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put ,:class => 'simple_form well form-horizontal'} ) do |f| %>
  <%= devise_error_messages! %>


  <%= f.input :email, :autofocus => true %>

  <%= f.input :password, :autocomplete => "off" %>

  <%= f.input :password_confirmation %>


  <%= f.input :current_password %>

  <%= f.button :submit,:value => I18n.t(:'simple_form.submit')  %>
<% end %>

<h3><%= I18n.t(:'profile.cancel_account')%></h3>

<p><%=I18n.t(:'profile.unhappy') %> <%= button_to I18n.t(:'profile.cancel_account'), registration_path(resource_name), :data => { confirm: I18n.t(:'global.confirm') }, :method => :delete, :class => 'btn btn-danger'%></p>

<%= link_to "Back", :back, :class => 'btn btn-primary'%>
<br /><br />
