<div class="page-header">
  <% if can? :manage, :all %>
    <%= link_to "<button class=\"nav nav-pills pull-right btn btn-primary\">#{I18n.t(:'ticket_state.new.btn')}</button>".html_safe, new_ticket_state_path %>
  <% end %>
  <h1><%= I18n.t(:'ticket_state.index.title') %></h1>
</div>

<div class="well">
    <table class="table table-striped">
      <tr>
        <th><%= I18n.t(:'ticket_state.global.name') %></th>
        <th colspan="3" class="hidden-phone"><%= I18n.t(:'global.actions') %></th>
      </tr>

    <% @ticket_states.each do |ticket_state| %>
      <tr>
        <td><%= link_to  ticket_state.name, ticket_state, :rel => 'tooltip', :title => I18n.t(:'ticket_state.show.btn') %></td>
        <td class="hidden-phone"><%= link_to  '<i class="icon-eye-open"></i>'.html_safe, ticket_state, :rel => 'tooltip', :title => I18n.t(:'ticket_state.show.btn') %></td>
        <td class="hidden-phone"><% if can? :manage, :all %><%= link_to '<i class="icon-pencil"></i>'.html_safe, edit_ticket_state_path(ticket_state), :rel => 'tooltip', :title => I18n.t(:'ticket_state.edit.btn') %><% end %></td>
        <td class="hidden-phone"><% if can? :manage, :all %><%= link_to '<i class="icon-remove"></i>'.html_safe, ticket_state, method: :delete, data: { confirm: I18n.t(:'global.confirm') }, :rel => 'tooltip', :title => I18n.t(:'ticket_state.delete.btn') %><% end %></td>
      </tr>
    <% end %>
    </table>
</div>
<br />

<%= will_paginate @ticket_states, :renderer => BootstrapPagination::Rails %>
