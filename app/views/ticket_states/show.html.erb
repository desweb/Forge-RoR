<div class="page-header">
  <% if can? :manage, :all %>
    <%= link_to "<button class=\"nav nav-pills pull-right btn btn-primary\" style=\"margin-left:10px;\">#{I18n.t(:'ticket_state.edit.btn')}</button>".html_safe, edit_ticket_state_path(@ticket_state) %>
  <% end %>

  <%= link_to "<button class=\"nav nav-pills pull-right btn btn-primary\" style=\"margin-left:10px;\">#{I18n.t(:'ticket_state.index.btn')}</button>".html_safe, ticket_states_path %>

  <% if can? :manage, :all %>
    <%= link_to "<button class=\"nav nav-pills pull-right btn btn-danger\">#{I18n.t(:'ticket_state.delete.btn')}</button>".html_safe, @ticket_state, method: :delete, data: { confirm: I18n.t(:'global.confirm') } %>
  <% end %>
  <h1><%= I18n.t(:'ticket_state.show.title') %> <em><%= @ticket_state.name %></em></h1>
</div>

<p id="notice"><%= notice %></p>

<div class="well">
  <table class="table table-striped">
    <tr>
      <th width="20%"><%= I18n.t(:'ticket_state.global.name') %></th>
      <td width="80%"><%= @ticket_state.name %></td>
    </tr>
  </table>
</div>
