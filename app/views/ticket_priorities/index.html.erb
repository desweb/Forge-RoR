<div class="page-header">
  <%= link_to '<button class="nav nav-pills pull-right btn btn-primary">Ajouter une priorité</button>'.html_safe, new_ticket_priority_path %>
  <h1>Listing ticket priorities</h1>
</div>

<div class="well">
<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th colspan="3">Actions</th>
  </tr>

<% @ticket_priorities.each do |ticket_priority| %>
  <tr>
    <td><%= ticket_priority.name %></td>
    <td><%= link_to '<i class="icon-eye-open"></i>'.html_safe, ticket_priority, :rel => 'tooltip', :title => 'Voir la priorité' %></td>
    <td><%= link_to '<i class="icon-pencil"></i>'.html_safe, edit_ticket_priority_path(ticket_priority), :rel => 'tooltip', :title => 'Modifier la priorité' %></td>
    <td><%= link_to '<i class="icon-remove"></i>'.html_safe, ticket_priority, method: :delete, data: { confirm: 'Are you sure?' }, :rel => 'tooltip', :title => 'Supprimer la priorité' %></td>
  </tr>
<% end %>
</table>
</div>

<%= will_paginate @ticket_priorities, :renderer => BootstrapPagination::Rails %>
